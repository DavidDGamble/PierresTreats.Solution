@{
  Layout = "_Layout";
}

@using PierresTreats.Models

<br>
<h2>Treats</h2>

@if (@Model.Count == 0)
{
  <h4>No treats have been added yet!</h4>
}
else
{
  <ul>
  @foreach (Treat treat in Model)
    {
      <li>@Html.ActionLink($"{treat.Name}", "Details", "Treats", new {id = treat.TreatId}) | $@treat.Price.ToString("#.##")</li>
    }
  </ul>
}
@if (User.IsInRole("admin"))
{
  <p>@Html.ActionLink("Add a new treat!", "Create", "Treats")</p>
}