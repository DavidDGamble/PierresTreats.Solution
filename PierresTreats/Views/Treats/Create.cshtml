@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Treat

<h4>Add a new treat</h4>
<hr>

<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
@using (Html.BeginForm())
{
  @Html.TextBoxFor(model => model.Name, new { placeholder = "Name", style = "text-align: center;"})
  <br><br>
  @Html.TextBoxFor(model => model.Price, new { placeholder = "Price", style = "text-align: center;"})
  <br><br>
  <input type="submit" value="Add a new treat!" class="btn btn-success"/>
}
